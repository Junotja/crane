#!/bin/bash

cd $MSMR_ROOT/apps/mysql
VER=5.1.72

rm -rf sysbench*
rm -rf mysql-$VER
rm -rf mysql-install
if [ ! -f mysql-$VER.tar.gz ]; then
	wget http://downloads.mysql.com/archives/get/file/mysql-$VER.tar.gz
fi
tar xzvf mysql-$VER.tar.gz
cd mysql-$VER

CFLAGS="-g -I$XTERN_ROOT/include -L$XTERN_ROOT/dync_hook -Wl,--rpath,$XTERN_ROOT/dync_hook -lxtern-annot" \
	./configure --prefix=$PWD/../mysql-install

make -j `nproc`
make install
cd ..

# Install a database.
sed -e "s/3306/7000/g"  ./mysql-install/share/mysql/my-large.cnf > ./my.cnf
./mysql-install/bin/mysql_install_db --defaults-file=./my.cnf

# Prepare sysbench.
./prepare-sysbench
