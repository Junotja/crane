
#!/bin/bash
APP_DIR=$MSMR_ROOT/apps/
VER=5.1.72

rm -rf mysql-$VER
rm -rf mysql-install
wget http://downloads.mysql.com/archives/get/file/mysql-$VER.tar.gz
tar xzvf mysql-$VER.tar.gz
cd mysql-$VER


./configure --prefix=$PWD/../mysql-install

make -j16
make install
cd ..

# Install a database.
sed -e "s/3306/7000/g"  ./mysql-install/share/mysql/my-large.cnf > ./my.cnf
./mysql-install/bin/mysql_install_db --defaults-file=./my.cnf

if [ -e /etc/mysql/my.cnf ]; then
	echo 'The global config may conflict with the version you are installing.'
	echo 'Consider removing /etc/mysql/my.cnf'
	exit 1
fi

# Prepare sysbench.
./mk-sysbench
./prepare-sysbench
